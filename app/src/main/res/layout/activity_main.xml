<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="1460dp"
        android:layout_height="2800dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-279dp"
        tools:layout_editor_absoluteY="-727dp" />

    <EditText
        android:id="@+id/editextUser"
        android:layout_width="319dp"
        android:layout_height="58dp"
        android:layout_marginTop="256dp"
        android:background="#EFE9E9"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="   USER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#133467"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Passwor"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Passwor"
        android:layout_width="313dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:background="#EFE9E9"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="   PASSAWORD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editextUser" />
</androidx.constraintlayout.widget.ConstraintLayout>